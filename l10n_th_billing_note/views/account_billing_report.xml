<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- QWeb Reports -->

        <record id="account_billing_note" model="ir.actions.report">
            <field name="name">Billing note</field>
            <field name="model">account.billing.note</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_th_billing_note.report_billing</field>
            <field name="report_file">l10n_th_billing_note.report_billing</field>
            <field name="print_report_name">((object.number or 'BLN').replace('/','_')+'.pdf')</field>
            <field name="attachment">(object.state == 'posted') and ((object.number or 'BLN').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="model_account_billing_note"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
