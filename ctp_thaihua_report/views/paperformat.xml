            <field name="report_file">ctp_thaihua_report.thaihua_report_tax_invoice_receipt_with_payments</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="paperformat_id" ref="ctp_thaihua_report.paperformat_thaihua_report"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
